<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".ui.itinerary.ItineraryEditFragment">

    <ImageButton
        android:id="@+id/edit_back"
        android:src="@drawable/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="0dp"
        android:backgroundTint="#00000000"/>

    <TextView
        android:id="@+id/id_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Place title"/>

    <TextView
        android:id="@+id/id_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        tools:text="Place visit date"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="26sp"
        android:textStyle="bold"
        android:text="Notes"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>
    
    <EditText
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:minLines="0"
        android:maxLines="20"
        android:scrollbars="vertical"
        android:hint="Type your notes here..."
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Delete this item"
            app:backgroundTint="@null"
            android:textColor="@color/selected_color"
            android:background="@drawable/btn_transparent_negative"
            android:minWidth="135dp"
            android:minHeight="38dp"
            android:padding="0dp"/>

        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/btn_transparent_positive"
            android:minWidth="135dp"
            android:minHeight="38dp"
            android:padding="0dp"
            android:text="Update notes"
            android:textColor="#6200EA"
            app:backgroundTint="@null" />

    </LinearLayout>

</LinearLayout>