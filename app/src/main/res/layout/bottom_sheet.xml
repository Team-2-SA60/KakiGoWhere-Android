<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:background="@color/material_dynamic_primary95"
    android:visibility="gone"
    app:behavior_peekHeight="0dp"
    app:behavior_hideable="true"
    app:behavior_draggable="false"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="14dp"
            android:layout_gravity="center_vertical"
            android:text="Add to Itinerary"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/close_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ã—"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/material_dynamic_primary95"/>

    </LinearLayout>

    <TextView
        android:id="@+id/empty_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="You don't have any existing itineraries. \nGo to 'Itinerary' tab to create an itinerary."/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itinerary_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>