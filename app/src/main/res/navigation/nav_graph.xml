<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="team2.kakigowhere.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_savedItemFragment"
            app:destination="@id/savedItemFragment" />
    </fragment>

    <!-- Explore Fragment -->
    <fragment
        android:id="@+id/exploreFragment"
        android:name="team2.kakigowhere.ui.ExploreFragment"
        android:label="Explore"
        tools:layout="@layout/fragment_explore">
        <action
            android:id="@+id/action_exploreFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <!-- DetailFragment -->
    <fragment
        android:id="@+id/detailFragment"
        android:name="team2.kakigowhere.ui.DetailFragment"
        android:label="Details"
        tools:layout="@layout/fragment_detail">
        <action
            android:id="@+id/action_detailFragment_to_mapFragment"
            app:destination="@id/mapFragment"/>
        <action
            android:id="@+id/action_detailFragment_to_ratingFragment"
            app:destination="@id/ratingFragment" />
        <action
            android:id="@+id/action_detailFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
        <argument
            android:name="place_id"
            app:argType="long"/>
    </fragment>

    <!-- MapFragment -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="team2.kakigowhere.ui.MapsFragment"
        android:label="Map"
        tools:layout="@layout/fragment_maps">
        <action
            android:id="@+id/action_mapFragment_to_detailFragment"
            app:destination="@id/detailFragment"/>
        <argument
            android:name="place_id"
            app:argType="long"
            android:defaultValue="0L"/>
        <argument
            android:name="showBack"
            app:argType="boolean"
            android:defaultValue="false"/>
    </fragment>

    <!-- SavedFragment -->
    <fragment
        android:id="@+id/savedFragment"
        android:name="team2.kakigowhere.ui.ItineraryFragment"
        android:label="Saved"
        tools:layout="@layout/fragment_saved">
        <action
            android:id="@+id/action_savedFragment_to_savedItemFragment"
            app:destination="@id/savedItemFragment"/>
        <action
            android:id="@+id/action_savedFragment_to_createItineraryFragment"
            app:destination="@id/createItineraryFragment"/>
    </fragment>

    <fragment
        android:id="@+id/savedItemFragment"
        android:name="team2.kakigowhere.ui.ItineraryDetailFragment"
        android:label="Saved Item"
        tools:layout="@layout/fragment_itinerary_detail">
        <action
            android:id="@+id/action_savedItemFragment_to_editSavedItemFragment"
            app:destination="@id/editSavedItemFragment"/>
        <argument
            android:name="itinerary"
            app:argType="team2.kakigowhere.data.model.ItineraryDTO"/>
    </fragment>

    <fragment
        android:id="@+id/editSavedItemFragment"
        android:name="team2.kakigowhere.ui.ItineraryEditFragment"
        android:label="Edit Saved Item"
        tools:layout="@layout/fragment_itinerary_edit">
        <argument
            android:name="itinerary_detail"
            app:argType="team2.kakigowhere.data.model.ItineraryDetailDTO"/>
    </fragment>

    <fragment
        android:id="@+id/createItineraryFragment"
        android:name="team2.kakigowhere.ui.ItineraryCreateFragment"
        android:label="Create Itinerary"
        tools:layout="@layout/fragment_itinerary_create">
        <action
            android:id="@+id/action_createItineraryFragment_to_savedFragment"
            app:destination="@id/savedFragment"/>
        <argument
            android:name="tourist_email"
            app:argType="string"/>
    </fragment>


    <!-- ProfileFragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="team2.kakigowhere.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">


        <!-- NEW: action to ChangeCategoriesFragment -->
        <action
            android:id="@+id/action_profileFragment_to_changeCategoriesFragment"
            app:destination="@id/changeCategoriesFragment" />
        <action
            android:id="@+id/action_profileFragment_to_ratingFragment"
            app:destination="@id/ratingFragment" />
    </fragment>

    <!-- NEW: ChangeCategoriesFragment entry -->
    <fragment
        android:id="@+id/changeCategoriesFragment"
        android:name="team2.kakigowhere.ui.ChangeCategoriesFragment"
        android:label="Change Interests"
        tools:layout="@layout/fragment_change_categories" />

    <!-- Rating fragment -->
    <fragment
        android:id="@+id/ratingFragment"
        android:name="team2.kakigowhere.ui.RatingsFragment"
        android:label="Ratings"
        tools:layout="@layout/fragment_ratings">
        <action
            android:id="@+id/action_ratings_to_writeRating"
            app:destination="@id/writeRatingFragment" />
        <argument
            android:name="place_id"
            app:argType="long" />
        <argument
            android:name="place_title"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/writeRatingFragment"
        android:name="team2.kakigowhere.ui.WriteRatingFragment"
        android:label="Write/Edit Rating">
        <argument
            android:name="place_id"
            app:argType="long" />
        <argument
            android:name="place_title"
            app:argType="string" />
    </fragment>

    <!-- WebView fragment -->
    <fragment
        android:id="@+id/webViewFragment"
        android:name="team2.kakigowhere.ui.WebViewFragment"
        android:label="Website"
        tools:layout="@layout/fragment_web_view">
        <argument
            android:name="url"
            app:argType="string" />
    </fragment>

</navigation>
