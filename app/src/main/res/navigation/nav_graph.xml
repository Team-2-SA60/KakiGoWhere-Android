<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- fragments in main navigation bar -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="team2.kakigowhere.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/exploreFragment"
        android:name="team2.kakigowhere.ui.ExploreFragment"
        android:label="Explore"
        tools:layout="@layout/fragment_explore">
        <action
            android:id="@+id/action_exploreFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <!-- DetailFragment -->
    <fragment
        android:id="@+id/detailFragment"
        android:name="team2.kakigowhere.ui.DetailFragment"
        android:label="Details"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="place"
            app:argType="team2.kakigowhere.data.model.PlaceDTO" />
        <action
            android:id="@+id/action_detailFragment_to_mapFragment"
            app:destination="@id/mapFragment">
            <!-- Pass coordinates and showBack -->
            <argument
                android:name="lat"
                app:argType="float"
                android:defaultValue="1.29027" />
            <argument
                android:name="lng"
                app:argType="float"
                android:defaultValue="103.85196" />
            <argument
                android:name="showBack"
                app:argType="boolean"
                android:defaultValue="false" />
        </action>
    </fragment>

    <!-- MapFragment -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="team2.kakigowhere.ui.MapsFragment"
        android:label="Map"
        tools:layout="@layout/fragment_maps">
        <!-- Required args with defaults -->
        <argument
            android:name="lat"
            app:argType="float"
            android:defaultValue="1.29027" />
        <argument
            android:name="lng"
            app:argType="float"
            android:defaultValue="103.85196" />
        <argument
            android:name="showBack"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>

    <!-- SavedFragment -->
    <fragment
        android:id="@+id/savedFragment"
        android:name="team2.kakigowhere.ui.SavedFragment"
        android:label="Saved"
        tools:layout="@layout/fragment_saved">

        <action
            android:id="@+id/action_savedFragment_to_savedItemFragment"
            app:destination="@id/savedItemFragment"/>

        <action
            android:id="@+id/action_savedFragment_to_createItineraryFragment"
            app:destination="@id/createItineraryFragment"/>
    </fragment>

    <fragment
        android:id="@+id/savedItemFragment"
        android:name="team2.kakigowhere.ui.ItineraryDetailFragment"
        android:label="Saved Item"
        tools:layout="@layout/fragment_itinerary_detail">

        <argument
            android:name="itinerary_id"
            app:argType="long"/>
    </fragment>

    <fragment
        android:id="@+id/createItineraryFragment"
        android:name="team2.kakigowhere.ui.ItineraryCreateFragment"
        android:label="Create Itinerary"
        tools:layout="@layout/fragment_itinerary_create">

        <action
            android:id="@+id/action_createItineraryFragment_to_savedFragment"
            app:destination="@id/savedFragment"/>

        <argument
            android:name="tourist_email"
            app:argType="string"/>
    </fragment>


<!--    change this out when profile is up-->
    <fragment
        android:id="@+id/ratingFragment"
        android:name="team2.kakigowhere.ui.RatingsFragment"
        android:label="Ratings"
        tools:layout="@layout/fragment_ratings">
        <action
            android:id="@+id/action_ratings_to_writeRating"
            app:destination="@id/writeRatingFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="team2.kakigowhere.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
    </fragment>

    <fragment
        android:id="@+id/writeRatingFragment"
        android:name="team2.kakigowhere.ui.WriteRatingFragment"
        android:label="Write/Edit Rating" />

</navigation>
